{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "client",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "client/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
